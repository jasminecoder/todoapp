<h2>Edit todo</h2>

<% if @todo.errors.any? %>
    <h2>Todo was not saved. Errors:</h2>
    <ul>
        <% @todo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %> 
    </ul>
    <% end %>
<%= form_for @todo do |f| %>
    <p>
        <%= f.label :name %> <br>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>
